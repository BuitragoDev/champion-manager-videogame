<Window x:Class="ChampionManager25.Vistas.frmListaPatrocinadores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChampionManager25.Vistas"
        mc:Ignorable="d" x:Name="VerPatrocinadoresWindow" Height="600" Width="1000" 
        Title="frmListaPatrocinadores" ResizeMode="NoResize" WindowStyle="None" Loaded="VerPatrocinadoresWindow_Loaded" WindowStartupLocation="CenterScreen">

    <Grid Width="1000" Height="600" Background="#1d6a7d">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="bordeLadoIzquierdo" Grid.Column="0" Grid.Row="0" Background="WhiteSmoke" BorderThickness="1" 
                BorderBrush="#23282d" Margin="25,25,25,25">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!-- Área Título Patrocinadores Principales -->
                <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Background="#2b6775">
                    <TextBlock x:Name="txtPatrocinador1" Text="OFERTAS DE PATROCINIO PRINCIPAL" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontFamily="Cascadia Code SemiBold" FontSize="20" Foreground="WhiteSmoke" TextAlignment="Center"/>
                </Border>
                <Image x:Name="imgCerrar" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Cursor="Hand"  
                       Width="30" Height="30" Stretch="Uniform" Source="/Recursos/img/icons/cerrar32px.png" MouseLeftButtonDown="imgCerrar_MouseLeftButtonDown"/>
                <Border Grid.Column="0" Grid.Row="1" Background="#23282d">
                    <TextBlock Text="PATROCINADOR" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="WhiteSmoke" TextAlignment="Center"/>
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Background="#23282d">
                    <TextBlock Text="INVERSIÓN BÁSICA" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="WhiteSmoke" TextAlignment="Center"/>
                </Border>
                <Border Grid.Column="2" Grid.Row="1" Background="#23282d">
                    <TextBlock Text="DURACIÓN" HorizontalAlignment="Center" VerticalAlignment="Center" 
                               FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="WhiteSmoke" TextAlignment="Center"/>
                </Border>
                <Border Grid.Column="3" Grid.Row="1" Background="#23282d" />

                <!-- Área Patrocinador Principal 1 -->
                <Image x:Name="imgPatrocinadorPrincipal1" Grid.Column="0" Grid.Row="2" Width="128" Height="128" Stretch="Uniform" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock x:Name="txtCantidadPatrocinadorPrincipal1" Grid.Column="1" Grid.Row="2" Text="" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" TextAlignment="Center"/>
                <TextBlock x:Name="txtDuracionPatrocinadorPrincipal1" Grid.Column="2" Grid.Row="2" Text="" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" TextAlignment="Center"/>
                <Image x:Name="imgSeleccionPatrocinadorPrincipal1" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand"  
                       Width="32" Height="32" Stretch="Uniform" Source="/Recursos/img/icons/noSeleccionado_icon.png" MouseLeftButtonDown="imgSeleccionPatrocinadorPrincipal1_MouseLeftButtonDown"/>

                <!-- Área Patrocinador Principal 2 -->
                <Image x:Name="imgPatrocinadorPrincipal2" Grid.Column="0" Grid.Row="3" Width="128" Height="128" Stretch="Uniform" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock x:Name="txtCantidadPatrocinadorPrincipal2" Grid.Column="1" Grid.Row="3" Text="" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" TextAlignment="Center"/>
                <TextBlock x:Name="txtDuracionPatrocinadorPrincipal2" Grid.Column="2" Grid.Row="3" Text="" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" TextAlignment="Center"/>
                <Image x:Name="imgSeleccionPatrocinadorPrincipal2" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand"  
                       Width="32" Height="32" Stretch="Uniform" Source="/Recursos/img/icons/noSeleccionado_icon.png" MouseLeftButtonDown="imgSeleccionPatrocinadorPrincipal2_MouseLeftButtonDown"/>

                <!-- Área Patrocinador Principal 3 -->
                <Image x:Name="imgPatrocinadorPrincipal3" Grid.Column="0" Grid.Row="4" Width="128" Height="128" Stretch="Uniform" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                <TextBlock x:Name="txtCantidadPatrocinadorPrincipal3" Grid.Column="1" Grid.Row="4" Text="" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" TextAlignment="Center"/>
                <TextBlock x:Name="txtDuracionPatrocinadorPrincipal3" Grid.Column="2" Grid.Row="4" Text="" HorizontalAlignment="Center" 
                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black" TextAlignment="Center"/>
                <Image x:Name="imgSeleccionPatrocinadorPrincipal3" Grid.Column="3" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand"  
                       Width="32" Height="32" Stretch="Uniform" Source="/Recursos/img/icons/noSeleccionado_icon.png" MouseLeftButtonDown="imgSeleccionPatrocinadorPrincipal3_MouseLeftButtonDown"/>

                <!-- Área Botón Cerrar -->
                <Border Background="WhiteSmoke" Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="4">
                    <Button x:Name="btnConfirmarPatrocinadores" Height="30" Width="350" Content="CONFIRMAR PATROCINADOR"
                            HorizontalAlignment="Center" VerticalAlignment="Top" Background="#23282d" Foreground="WhiteSmoke"
                            FontFamily="Cascadia Code SemiBold" FontSize="20" Cursor="Hand" Click="btnConfirmarPatrocinadores_Click" Visibility="Hidden">
                        <Button.Style>
                            <Style TargetType="Button">
                                <!-- Configuración inicial -->
                                <Setter Property="Background" Value="#23282d"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="WhiteSmoke"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
