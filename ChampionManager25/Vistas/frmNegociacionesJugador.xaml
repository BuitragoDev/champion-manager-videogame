<Window x:Class="ChampionManager25.Vistas.frmNegociacionesJugador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChampionManager25.Vistas"
        mc:Ignorable="d" Height="1080" Width="1920" 
        Title="frmNegociacionesJugador" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowState="Maximized" Unloaded="Window_Unloaded" >
    <Grid>
        <!-- Imagen de Fondo del UserControl-->
        <Grid.Background>
            <ImageBrush ImageSource="/Recursos/img/background_negociaciones.png" Stretch="UniformToFill" TileMode="None"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1920"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Border Background="#FF23282D" Grid.Column="0" Grid.Row="0">
            <TextBlock Text="NEGOCIACIÓN CON JUGADOR" HorizontalAlignment="Center" VerticalAlignment="Center"
               FontFamily="Cascadia Code SemiBold" FontSize="20" Foreground="WhiteSmoke" TextAlignment="Center"/>
        </Border>

        <Border Grid.Column="0" Grid.Row="1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="480"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Columna Izquierda -->
                <Border Background="LightGray" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="20" Height="340" VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Direction="320" 
                                          Opacity="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <!-- Demanda del Jugador -->
                        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="#FF23282D">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="DEMANDA DEL JUGADOR" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="22" 
                                           Foreground="WhiteSmoke" TextAlignment="Center"/>

                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Background="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Salario (año)" HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                                <TextBlock x:Name="txtDemandaSalario" Grid.Column="1" Grid.Row="0" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Claúsula de Rescisión" HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                                <TextBlock x:Name="txtDemandaClausula" Grid.Column="1" Grid.Row="0" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Background="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Años de Contrato" HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                                <TextBlock x:Name="txtDemandaAnios" Grid.Column="1" Grid.Row="0" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Rol" HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                                <TextBlock x:Name="txtDemandaRol" Grid.Column="1" Grid.Row="0" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>

                            </Grid>
                        </Border>

                        <!-- Bonuses del Jugador -->
                        <Border Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Background="#FF23282D">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="BONUSES" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="22" 
                                           Foreground="WhiteSmoke" TextAlignment="Center"/>

                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Background="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="chkDemandaBonusPartido" Grid.Column="0" Grid.Row="0" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          Content=""
                                          IsEnabled="False"
                                          IsChecked="False">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <StackPanel Orientation="Horizontal">
                                                            <!-- Caja personalizada -->
                                                            <Border x:Name="checkBorder"
                                                                    Width="20" Height="20"
                                                                    BorderBrush="#FF23282D"
                                                                    BorderThickness="1"
                                                                    Background="White"/>
                                                            <ContentPresenter Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <ControlTemplate.Triggers>
                                                            <!-- Si está marcado, cambia el fondo a naranja -->
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="checkBorder" Property="Background" Value="DarkGreen"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>

                                <TextBlock Grid.Column="1" Grid.Row="0" Text="Bonus por partido" HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>
                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="chkDemandaBonusGoles" Grid.Column="0" Grid.Row="0" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          Content=""
                                          IsEnabled="False"
                                          IsChecked="False">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <StackPanel Orientation="Horizontal">
                                                            <!-- Caja personalizada -->
                                                            <Border x:Name="checkBorder"
                                                                    Width="20" Height="20"
                                                                    BorderBrush="#FF23282D"
                                                                    BorderThickness="1"
                                                                    Background="White"/>
                                                            <ContentPresenter Margin="5,0,0,0"/>
                                                        </StackPanel>
                                                        <ControlTemplate.Triggers>
                                                            <!-- Si está marcado, cambia el fondo a naranja -->
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="checkBorder" Property="Background" Value="DarkGreen"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>

                                <TextBlock Grid.Column="1" Grid.Row="0" Text="Bonus por goles" HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left" Margin="20,0,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Columna Central -->
                <Border Background="LightGray" Grid.Column="1" Grid.Row="0" Margin="20" Height="440" VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                                          BlurRadius="10" 
                                          ShadowDepth="5" 
                                          Direction="320" 
                                          Opacity="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="150"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>

                        <!-- Dorsal y nombre del jugador -->
                        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Background="#FF23282D">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="txtDorsal" Grid.Column="0" Grid.Row="0" Text="" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="32" 
                                           Foreground="WhiteSmoke" TextAlignment="Center"/>

                                <TextBlock x:Name="txtNombreJugador" Grid.Column="1" Grid.Row="0" Text="" HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="26" 
                                           Foreground="WhiteSmoke" TextAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Foto del Jugador -->
                        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Image x:Name="imgFotoJugador" Grid.Column="0" Grid.Row="0" Width="120" Height="120" VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" />

                                <Image x:Name="imgEscudoEquipo" Grid.Column="1" Grid.Row="0" Width="120" Height="120" VerticalAlignment="Center" 
                                       HorizontalAlignment="Center" />

                                <Ellipse x:Name="elipseMedia" Grid.Column="2" HorizontalAlignment="Center" Height="80" Stroke="Green" 
                                         VerticalAlignment="Center" Width="80" StrokeThickness="10"/>
                                <TextBlock x:Name="lblAverage" Grid.Column="2" Text="99" FontFamily="Cascadia Code SemiBold" 
                                           FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Grid>
                        </Border>

                        <!-- Equipo del Jugador -->
                        <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Background="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Equipo:" HorizontalAlignment="Left" Margin="20,0,0,0" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>

                                <TextBlock x:Name="txtEquipoJugador" Grid.Row="0" Grid.Column="1" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" Margin="20,0,0,0" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>
                            </Grid>
                        </Border>

                        <!-- Posición del Jugador -->
                        <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Posición:" HorizontalAlignment="Left" Margin="20,0,0,0" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>

                                <TextBlock x:Name="txtPosicionJugador" Grid.Row="0" Grid.Column="1" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" Margin="20,0,0,0" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>
                            </Grid>
                        </Border>

                        <!-- Status del Jugador -->
                        <Border Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Background="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Rol:" HorizontalAlignment="Left" Margin="20,0,0,0" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>

                                <TextBlock x:Name="txtStatusJugador" Grid.Row="0" Grid.Column="1" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" Margin="20,0,0,0" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>
                            </Grid>
                        </Border>

                        <!-- Salario del Jugador -->
                        <Border Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Salario (año):" HorizontalAlignment="Left" Margin="20,0,0,0" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>

                                <TextBlock x:Name="txtSalarioJugador" Grid.Row="0" Grid.Column="1" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" Margin="20,0,0,0" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>
                            </Grid>
                        </Border>

                        <!-- Claúsula del Jugador -->
                        <Border Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="2" Background="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Claúsula de rescisión:" HorizontalAlignment="Left" Margin="20,0,0,0" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>

                                <TextBlock x:Name="txtClausulaJugador" Grid.Row="0" Grid.Column="1" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" Margin="20,0,0,0" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>
                            </Grid>
                        </Border>

                        <!-- Años contrato del Jugador -->
                        <Border Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Años:" HorizontalAlignment="Left" Margin="20,0,0,0" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>

                                <TextBlock x:Name="txtAniosJugador" Grid.Row="0" Grid.Column="1" Text="..." HorizontalAlignment="Left" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="16" Margin="20,0,0,0" 
                                           Foreground="#FF23282D" TextAlignment="Left"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Estado de la negociación -->
                <Border Background="WhiteSmoke" Grid.Column="1" Grid.Row="1" Margin="20" Height="400" VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" 
                          BlurRadius="10" 
                          ShadowDepth="5" 
                          Direction="320" 
                          Opacity="0.5"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Background="#FF23282D">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="ESTADO DE LA NEGOCIACIÓN" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="22" 
                                           Foreground="WhiteSmoke" TextAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Column="0" Grid.Row="0" Width="64" Height="64" VerticalAlignment="Center" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" Source="/Recursos/img/icons/acuerdo_icon.png" />

                                <ProgressBar x:Name="barraProgreso" Grid.Column="1" Grid.Row="0"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             Width="350" Height="30"
                                             Minimum="0" Maximum="100"
                                             Value="0"
                                             Background="#FF23282D"
                                             Foreground="DarkOrange"
                                             BorderBrush="#FF23282D"
                                             BorderThickness="0.5"/>

                                <TextBlock x:Name="txtPorcentajeNegociacion" Grid.Column="2" Grid.Row="0" 
                                           Text="0%" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="22" 
                                           Foreground="#FF23282D" TextAlignment="Center"/>

                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Column="0" Grid.Row="0" Width="48" Height="48" VerticalAlignment="Center" Stretch="UniformToFill" 
                                       HorizontalAlignment="Center" Source="/Recursos/img/icons/paciencia_icon.png" />

                                <ProgressBar x:Name="barraPaciencia" Grid.Column="1" Grid.Row="0"
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             Width="350" Height="30"
                                             Minimum="0" Maximum="100"
                                             Value="100"
                                             Background="#FF23282D"
                                             Foreground="DarkGreen"
                                             BorderBrush="#FF23282D"
                                             BorderThickness="0.5"/>

                                <TextBlock x:Name="txtPorcentajePaciencia" Grid.Column="2" Grid.Row="0" 
                                           Text="100%" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="22" 
                                           Foreground="#FF23282D" TextAlignment="Center"/>

                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3" Background="#FF23282D">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="PACIENCIA DEL JUGADOR" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="22" 
                                           Foreground="WhiteSmoke" TextAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" Background="LightGray">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock x:Name="txtEstadoNegociacion" Grid.Column="0" Grid.Row="0" 
                                           Text="Esperando una oferta" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" FontFamily="Cascadia Code SemiBold" FontSize="18" 
                                           Foreground="#FF23282D" TextAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
