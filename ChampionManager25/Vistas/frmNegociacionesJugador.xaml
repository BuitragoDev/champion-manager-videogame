                            Height="50" Width="320" FontFamily="Cascadia Code SemiBold" FontSize="20" Cursor="Hand" Visibility="Collapsed" Click="btnConfirmarOferta_Click">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background" Value="#569704" />
                                <Setter Property="Foreground" Value="WhiteSmoke" />
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="SnapsToDevicePixels" Value="True" />

                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border CornerRadius="4" Background="{TemplateBinding Background}">
                                                <Grid>
                                                    <Image x:Name="imgBoton" Source="/Recursos/img/icons/confirmar_icon.png" Height="32" Width="32" VerticalAlignment="Center" HorizontalAlignment="Left" Stretch="Uniform" Margin="7,0,0,0"/>
                                                    <ContentPresenter x:Name="MyContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25,0,0,0" />
                                                </Grid>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#61a807" />
                                                    <Setter Property="Foreground" Value="WhiteSmoke" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </WrapPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
