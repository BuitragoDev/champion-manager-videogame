<UserControl x:Class="ChampionManager25.UserControls.UC_Menu_Transferencias"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChampionManager25.UserControls"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="1845">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblFichajes" Grid.Column="0" HorizontalAlignment="Center" Text="FICHAJES" VerticalAlignment="Center" 
               FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
               TextAlignment="Center"/>

        <TextBlock x:Name="lblMercado" Grid.Column="1" HorizontalAlignment="Center" Text="Mercado" VerticalAlignment="Center" 
                           FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                           TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblMercado_MouseLeftButtonDown"/>

        <TextBlock x:Name="lblBuscarPorEquipo" Grid.Column="2" HorizontalAlignment="Center" Text="Buscar por Equipo" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="244" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblBuscarPorEquipo_MouseLeftButtonDown"/>

        <TextBlock x:Name="lblBuscarPorFiltro" Grid.Column="3" HorizontalAlignment="Center" Text="Buscar por Filtro" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="250" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblBuscarPorFiltro_MouseLeftButtonDown"/>

        <TextBlock x:Name="lblCartera" Grid.Column="4" HorizontalAlignment="Center" Text="Cartera" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblCartera_MouseLeftButtonDown"/>

        <TextBlock x:Name="lblEstadoOfertas" Grid.Column="5" HorizontalAlignment="Center" Text="Estado Ofertas" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblEstadoOfertas_MouseLeftButtonDown"/>

        <TextBlock x:Name="lblListaTraspasos" Grid.Column="6" HorizontalAlignment="Center" Text="Lista de Traspasos" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblListaTraspasos_MouseLeftButtonDown"/>
    </Grid>
</UserControl>
