<UserControl x:Class="ChampionManager25.UserControls.UC_Menu_Entrenador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChampionManager25.UserControls"
             mc:Ignorable="d" d:DesignHeight="50" d:DesignWidth="1845">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblEquipo" Grid.Column="0" HorizontalAlignment="Center" Text="ENTRENADOR" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                   TextAlignment="Center"/>

        <TextBlock x:Name="lblAlineacion" Grid.Column="1" HorizontalAlignment="Center" Text="Alineación" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblAlineacion_MouseLeftButtonDown" />

        <TextBlock x:Name="lblEntrenamiento" Grid.Column="2" HorizontalAlignment="Center" Text="Entrenamiento" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblEntrenamiento_MouseLeftButtonDown" />

        <TextBlock x:Name="lblVerRival" Grid.Column="3" HorizontalAlignment="Center" Text="Ver Rival" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="16" Foreground="WhiteSmoke" FontWeight="Bold" Width="200" 
                   TextAlignment="Center" Cursor="Hand" MouseLeftButtonDown="lblCerRival_MouseLeftButtonDown" />
    </Grid>
</UserControl>
