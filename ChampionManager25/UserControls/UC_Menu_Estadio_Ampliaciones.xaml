<UserControl x:Name="UCAmpliaciones" x:Class="ChampionManager25.UserControls.UC_Menu_Estadio_Ampliaciones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChampionManager25.UserControls"
             mc:Ignorable="d" d:DesignHeight="935" d:DesignWidth="1845" Loaded="UCAmpliaciones_Loaded" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Recursos/img/backgroundEstadio_img.png" Stretch="UniformToFill" TileMode="None"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="745"/>
            <ColumnDefinition Width="1100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="930"/>
        </Grid.RowDefinitions>

        <Border Background="WhiteSmoke"
                BorderThickness="5"
                BorderBrush="#1d6a7d"
                Margin="37,100,5,0"
                Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" Height="764">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="700"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="350"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Background="#23282d">
                    <TextBlock x:Name="txtNombreEstadio" Grid.Column="2" HorizontalAlignment="Left" Text="Nombre Pabellon" VerticalAlignment="Center" 
                       FontFamily="Cascadia Code SemiBold" FontSize="20" Foreground="WhiteSmoke" Margin="20,0,0,0"/>
                </Border>

                <Border x:Name="borderBarraTitulo" Grid.Column="0" Grid.Row="1" Background="#1d6a7d">
                    <TextBlock x:Name="txtTitulo" Grid.Column="2" HorizontalAlignment="Left" Text="AUMENTAR CAPACIDAD EN..." VerticalAlignment="Center" 
                       FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="WhiteSmoke" Margin="20,0,0,0"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="694"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0" Grid.Row="0" BorderBrush="Black" BorderThickness="1" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="72"/>
                                    <ColumnDefinition Width="484"/>
                                    <ColumnDefinition Width="128"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="72"/>
                                </Grid.RowDefinitions>

                                <Image x:Name="imgSeleccionObra1" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand"  
                                       Width="64" Height="64" Stretch="Uniform" Source="/Recursos/img/icons/noSeleccionado_icon.png" MouseLeftButtonDown="imgSeleccionObra1_MouseLeftButtonDown" />

                                <Border Grid.Column="1" Grid.Row="0"
                                        Width="484" Height="72" HorizontalAlignment="Center">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock x:Name="txt1Remodelacion1" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="500 asientos" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black"/>
                                        <TextBlock x:Name="txt2Remodelacion1" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="5.000.000 €" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="DarkRed"/>
                                        <TextBlock x:Name="txt3Remodelacion1" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="20 semanas" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="#FF0E2B82"/>
                                    </Grid>
                                </Border>

                                <Image x:Name="imgExcavadora1" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       Width="64" Height="64" Stretch="Uniform" Source="/Recursos/img/icons/excavadora_icon.png" Visibility="Hidden" />
                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="72"/>
                                    <ColumnDefinition Width="484"/>
                                    <ColumnDefinition Width="128"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="72"/>
                                </Grid.RowDefinitions>

                                <Image x:Name="imgSeleccionObra2" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand"   
                                       Width="64" Height="64" Stretch="Uniform" Source="/Recursos/img/icons/noSeleccionado_icon.png" MouseLeftButtonDown="imgSeleccionObra2_MouseLeftButtonDown" />

                                <Border Grid.Column="1" Grid.Row="0"
                                        Width="484" Height="72" HorizontalAlignment="Center">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock x:Name="txt1Remodelacion2" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="1000 asientos" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black"/>
                                        <TextBlock x:Name="txt2Remodelacion2" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="50,0,0,0" 
                                                   Text="15.000.000 €" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="DarkRed"/>
                                        <TextBlock x:Name="txt3Remodelacion2" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="35 semanas" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="#FF0E2B82"/>
                                    </Grid>
                                </Border>

                                <Image x:Name="imgExcavadora2" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       Width="64" Height="64" Stretch="Uniform" Source="/Recursos/img/icons/excavadora_icon.png" Visibility="Hidden" />
                            </Grid>
                        </Border>

                        <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="72"/>
                                    <ColumnDefinition Width="484"/>
                                    <ColumnDefinition Width="128"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="72"/>
                                </Grid.RowDefinitions>

                                <Image x:Name="imgSeleccionObra3" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand"  
                                       Width="64" Height="64" Stretch="Uniform" Source="/Recursos/img/icons/noSeleccionado_icon.png" MouseLeftButtonDown="imgSeleccionObra3_MouseLeftButtonDown" />

                                <Border Grid.Column="1" Grid.Row="0" 
                                        Width="484" Height="72" HorizontalAlignment="Center" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock x:Name="txt1Remodelacion3" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="1500 asientos" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="Black"/>
                                        <TextBlock x:Name="txt2Remodelacion3" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="30.000.000 €" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="DarkRed"/>
                                        <TextBlock x:Name="txt3Remodelacion3" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" Margin="50,0,0,0"
                                                   Text="50 semanas" VerticalAlignment="Center" TextAlignment="Center" 
                                                   FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="#FF0E2B82"/>
                                    </Grid>
                                </Border>

                                <Image x:Name="imgExcavadora3" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                                       Width="64" Height="64" Stretch="Uniform" Source="/Recursos/img/icons/excavadora_icon.png" Visibility="Hidden" />
                            </Grid>
                        </Border>

                        <Button x:Name="btnEmpezarObras" Grid.Row="3" Margin="5,6,5,7"
                                Background="DarkRed" Foreground="WhiteSmoke" Content="Empezar Obras" 
                                FontFamily="Cascadia Code SemiBold" FontSize="18" Cursor="Hand" Visibility="Hidden" Click="btnEmpezarObras_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <!-- Configuración inicial -->
                                    <Setter Property="Background" Value="#23282d"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="WhiteSmoke"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <Image x:Name="imgStadium" Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Left"  
               Width="700" Height="350" Stretch="UniformToFill" />

            </Grid>
        </Border>
        <Image x:Name="imgLogo" Grid.Column="1" HorizontalAlignment="Left" Height="200" Margin="132,322,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</UserControl>
