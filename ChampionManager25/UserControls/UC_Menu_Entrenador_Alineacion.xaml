                                                       FontFamily="Cascadia Code SemiBold" FontSize="18" Foreground="WhiteSmoke" TextAlignment="Center"/>
                                        </Border>

                                        <!-- Boton btn541 -->
                                        <Button x:Name="btn541" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                                Height="35" Width="80" FontFamily="Cascadia Code SemiBold" FontSize="18" Cursor="Hand" Click="btn541_Click">
