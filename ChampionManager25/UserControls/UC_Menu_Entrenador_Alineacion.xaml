<UserControl x:Name="alineacion" x:Class="ChampionManager25.UserControls.UC_Menu_Entrenador_Alineacion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChampionManager25.UserControls"
             mc:Ignorable="d" d:DesignHeight="935" d:DesignWidth="1845" Loaded="alineacion_Loaded">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1845"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" BorderBrush="#1d6a7d" BorderThickness="1" Margin="10">
            <Grid Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#1d6a7d" Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="ALINEACIÓN" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontFamily="Cascadia Code SemiBold" FontSize="22" Foreground="WhiteSmoke" TextAlignment="Center"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Columna Izquierda-->
                        <Border Grid.Column="0" Grid.Row="0" Margin="10,10,10,10" BorderBrush="#1d6a7d" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="420"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Background="#1d6a7d" Grid.Column="0" Grid.Row="0">
                                    <TextBlock Text="TITULARES" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               FontFamily="Cascadia Code SemiBold" FontSize="22" Foreground="WhiteSmoke" TextAlignment="Center"/>
                                </Border>

                                <DockPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Top">
                                    <DataGrid x:Name="dgTitulares" IsReadOnly="True" AutoGenerateColumns="False"
                                              GridLinesVisibility="None" FontFamily="Cascadia Code Light" FontSize="16" DockPanel.Dock="Top" 
                                              Cursor="Hand" Height="420" Width="1192" SelectionChanged="dgTitulares_SelectionChanged"/>
                                </DockPanel>

                                <Border Background="#1d6a7d" Grid.Column="0" Grid.Row="2">
                                    <TextBlock Text="RESERVAS" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                               FontFamily="Cascadia Code SemiBold" FontSize="22" Foreground="WhiteSmoke" TextAlignment="Center"/>
                                </Border>

                                <WrapPanel Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Height="360">
                                    <DataGrid x:Name="dgReservas" IsReadOnly="True" AutoGenerateColumns="False"
                                              GridLinesVisibility="None" FontFamily="Cascadia Code Light" FontSize="16" DockPanel.Dock="Top" 
                                              Cursor="Hand" Height="350" Width="1193" SelectionChanged="dgReservas_SelectionChanged"/>
                                </WrapPanel>
                            </Grid>
                        </Border>

                        <!-- Columna Derecha-->
                        <Border Grid.Column="1" Grid.Row="0" Margin="10" BorderBrush="#1d6a7d" BorderThickness="1" >

                        </Border>

                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
