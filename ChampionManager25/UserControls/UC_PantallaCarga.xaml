<UserControl x:Class="ChampionManager25.UserControls.UC_PantallaCarga"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChampionManager25.UserControls"
             mc:Ignorable="d" d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <!-- Imagen de Fondo del UserControl -->
        <Grid.Background>
            <ImageBrush ImageSource="/Recursos/img/backgroundCarga1920x1080.png" Stretch="UniformToFill" TileMode="None"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Width="348" Height="96" Margin="0,20,40,0" VerticalAlignment="Top" HorizontalAlignment="Right" 
               Source="/Recursos/img/logoBuitragoStudios.png" />

        <TextBlock x:Name="txtFraseAleatoria" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Text=""
                   Foreground="WhiteSmoke" FontSize="18" FontFamily="Cascadia Code SemiBold"/>
    </Grid>
</UserControl>
