<UserControl x:Name="palmares" x:Class="ChampionManager25.UserControls.UC_Menu_Competicion_Palmares"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChampionManager25.UserControls"
             mc:Ignorable="d" d:DesignHeight="935" d:DesignWidth="1845" Loaded="palmares_Loaded">
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1845"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" BorderBrush="#1d6a7d" BorderThickness="1" Margin="10">
            <Grid Background="WhiteSmoke">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#1d6a7d" Grid.Column="0" Grid.Row="0">
                    <TextBlock Text="PALMARÉS EQUIPOS" HorizontalAlignment="Center" VerticalAlignment="Center" 
                       FontFamily="Cascadia Code SemiBold" FontSize="22" Foreground="WhiteSmoke" TextAlignment="Center"/>
                </Border>

                <Border Grid.Column="0" Grid.Row="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="700"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Columna Izquierda-->
                        <Border Grid.Column="0" Grid.Row="0" Margin="10" BorderBrush="#1d6a7d" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="220"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Height="220" Width="700" Stretch="Uniform"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"
                                       Source="/Recursos/img/bannerPalmares.png" />

                                <WrapPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" >
                                    <DataGrid x:Name="dgPalmares" IsReadOnly="True" AutoGenerateColumns="False"
                                              GridLinesVisibility="None" FontFamily="Cascadia Code Light" FontSize="16" DockPanel.Dock="Top" Height="588" Cursor="Hand" Width="658" />
                                </WrapPanel>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" Grid.Row="0" Margin="10" BorderBrush="#1d6a7d" BorderThickness="1" >
                            <WrapPanel Margin="10" >
                                <DataGrid x:Name="dgHistorialFinales" IsReadOnly="True" AutoGenerateColumns="False"
                                          GridLinesVisibility="None" FontFamily="Cascadia Code Light" FontSize="16" DockPanel.Dock="Top" Height="811" Cursor="Hand" Width="1071" />
                            </WrapPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
